{
    "_documentation": "This manifest can only configure permissions and basic features. URL-dependent features (slash commands, interactive components, webhooks) must be configured manually after app creation due to Slack's security restrictions. See README.md for detailed post-creation setup instructions.",
    
    "display_information": {
        "name": "AI Assistant",
        "description": "AI-powered assistant for Slack",
        "background_color": "#000000"
    },
    "features": {
        "bot_user": {
            "display_name": "AI Assistant",
            "always_online": true
        },
        "app_home": {
            "home_tab_enabled": true,
            "messages_tab_enabled": true,
            "messages_tab_read_only_enabled": false
        }
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "app_mentions:read",
                "channels:history",
                "channels:read",
                "chat:write",
                "chat:write.public",
                "commands",
                "im:history",
                "im:read",
                "im:write",
                "links:read",
                "users:read",
                "workflow.steps:execute"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "app_home_opened",
                "app_mention",
                "message.im",
                "link_shared"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": false
    }
}